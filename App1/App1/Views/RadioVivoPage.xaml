<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.RadioVivoPage"
             Title="Radio En Vivo">

    <StackLayout>
        <Image Source="LogoLevantate.png" />
        <Image Source="NoConnected.png" IsVisible="{Binding NoConectado}"/>
        <Label x:Name="LblSinConexion" Text="Ups. Sin Conexión a Internet"  IsVisible="{Binding NoConectado}"
                   HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" FontSize="Medium"/>
        <WebView x:Name="LVBrowser" Source="{Binding HTMLSource}"  HeightRequest="1000" WidthRequest="1000"/>

    </StackLayout>
</ContentPage>