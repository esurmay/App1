<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.NoticiasPage"
             Title="NoticiasPage">
    <StackLayout>
        <ListView x:Name="LVNoticias" ItemsSource="{Binding Items}" 
            ItemTapped="Handle_ItemTapped"
            ItemSelected="Handle_ItemSelected"
            HasUnevenRows="true"           
            IsPullToRefreshEnabled="true"
            CachingStrategy="RecycleElement"
            IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
            RefreshCommand="{Binding RefreshDataCommand}"
              SeparatorColor="Blue">


            <!--Built in Cells-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Image Source="{Binding ImageUrl}" Aspect="AspectFit" />
                            <Label Text="{Binding Text}" TextColor="#303440" FontAttributes="Bold" FontSize="Medium"
                   Style="{DynamicResource ListItemTextStyle}" />
                            <Label Text="{Binding Detail}" 
                   Style="{DynamicResource ListItemDetailTextStyle}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>
    </StackLayout>
</ContentPage>