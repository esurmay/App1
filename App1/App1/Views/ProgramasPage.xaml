<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LevantateChevere.Views.ProgramasPage"
             Title="ListView">
    <ListView x:Name="LVProgramas" ItemsSource="{Binding Items}" 
            ItemTapped="Handle_ItemTapped"
            ItemSelected="Handle_ItemSelected"
            HasUnevenRows="true"           
            IsPullToRefreshEnabled="true"
            CachingStrategy="RecycleElement"
            IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
            RefreshCommand="{Binding RefreshDataCommand}"
            SeparatorVisibility="None">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame BackgroundColor="WhiteSmoke" OutlineColor="LightBlue" 
                            CornerRadius="5" HasShadow="True">
                        <StackLayout>
                            <Image Source="{Binding ImageUrl}" />
                            <Label Text="{Binding Text}" TextColor="#303440" FontSize="Medium" FontFamily="Arial"/>
                            <Label Text="{Binding Detail}" />
                        </StackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>        
    </ListView>
</ContentPage>
